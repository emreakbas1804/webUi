    <script src="~/content/jquery/dist/jquery.min.js"></script>
    <script src="~/content/jsdelivr/typed.js"></script>
    <script src="~/content/scrollreveal/dist/scrollreveal.min.js"></script>
    <script src="~/content/swiper/swiper-bundle.min.js"></script>
    <script>

        window.onload = function () {
            $('#loading').hide();
            var typed = new Typed('#typed', {
                strings: ['@localizer["1"]'],
                typeSpeed: 15,
            });

            var swiper = new Swiper(".mySwiper", {
                slidesPerView: 1,
                spaceBetween: 0,
                centeredSlides: true,
                loop: true,
                cssmode: true,
                pagination: {
                    el: ".swiper-pagination",
                    dynamicBullets: true,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                breakpoints: {
                    768: {
                        slidesPerView: 3
                    },
                },
                keyboard: true,
            });

            window.sr = new ScrollReveal();
            sr.reveal(".header2 .box", {
                distance: "100px",
                origin: "bottom",
                opacity: 0,
                scale: 0.4,
                interval: 300,
            });
            sr.reveal(".header4 .col-md-3", {
                distance: "100px",
                origin: "bottom",
                opacity: 0,
                scale: 0.4,
                interval: 300,
            });
            sr.reveal(".header5 .col-md-6", {
                distance: "100px",
                origin: "bottom",
                opacity: 0,
                scale: 0.4,
                interval: 300,
            });

        }

    </script>
</body>

</html>