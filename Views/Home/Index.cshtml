                    <div class="col-md-3 content">
                        <img src="~/images/iconlar/kiremit.webp" alt="kiremit">
                        <h3>@localizer["20"]</h3>
                    </div>
                    <div class="col-md-3 content">
                        <img src="~/images/iconlar/kagit.webp" alt="kagit">
