@inject IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Lütfen detaylı Referans listemiz için bizimle irtibata geçiniz. Talebiniz doğrultusunda referans listemiz en kısa sürede tarafınıza ulaştırılacaktır.">
    <meta name="author" content="Tor services">
    <meta name="publisher" content="Tor services">
    <title>TOR-SERVİCES | Referanslarımız</title>
    <link rel="icon" type="image/x-icon" href="/images/tor-logo.webp">
    <link rel="stylesheet" href="~/content/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&family=Mukta:wght@300&family=PT+Serif&family=Shadows+Into+Light&family=Ubuntu:wght@300&display=swap">
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        .header1{
            height: 90vh;          
        }
        .header1 .row{
            justify-content: center;
        }
        .header1 h4{
            margin-top: 20vh;
            text-align: center;
        }
        #loading {            
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background-color: #fff;
        }
        #loading img{
            position: relative;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%); 
        }
    </style>
</head>

<body>

    <div id="loading">
        <img src="~/images/loading.gif" alt="loading">
    </div>
   
    <div class="loading-content">
        <div class="header1">
            <img src="~/images/bg.webp" alt="bg-image" class="bg-image">
            @await Html.PartialAsync("/Views/Home/navbar.cshtml")
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <h4>
                        @localizer["0"]
                    </h4>  
                    </div>
                    
                </div>
            </div>
        </div>

        @await Html.PartialAsync("/Views/Home/footer.cshtml")
    </div>




    <script src="~/content/jquery/dist/jquery.min.js"></script>     
    <script>
        window.onload = function () {
            $('#loading').hide();           
        }
    </script>
</body>

</html>